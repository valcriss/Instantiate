    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/mock-fs": "^4.13.4",
    "@types/mustache": "^4.2.5",
    "@types/node": "^24.0.0",
    "@types/node-fetch": "^2.6.12",
    "@types/pg": "^8.11.11",
    "@types/supertest": "^6.0.3",
    "@types/yaml": "^1.9.6",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "gh-pages": "^6.3.0",
    "jest": "^29.7.0",
    "mock-fs": "^5.5.0",
    "node-pg-migrate": "^8.0.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "execa": "^9.5.2",
    "express": "^5.1.0",
    "mqtt": "^5.11.0",
    "mustache": "^4.2.0",
    "node-fetch": "^3.3.2",
    "npc": "^0.0.1",
    "pg": "^8.14.1",
