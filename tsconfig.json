{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",    
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "express", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "allowSyntheticDefaultImports": true

  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}